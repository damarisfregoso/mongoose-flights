<%- include('../partials/header') %>
<h1>
  <img src="https://clipart-library.com/new_gallery/16-169059_plane-png-image-airplane-clip-art.png" alt="airplane">
  &nbsp; Flight Details &nbsp; 
  <img src="https://clipart-library.com/new_gallery/16-169059_plane-png-image-airplane-clip-art.png" alt="airplane">
</h1>
<section id="show-page">
  <ul>
    <li>- Airline: <%= flight.airline %></li>
    <li>- Airport: <%= flight.airport %></li>
    <li>- Flight: <%= flight.flightNo %></li>
    <li>- Departs: <%= flight.departs %></li>
  </ul>
</section>

<h1>List of Tickets</h1>
<section id="show-page">
  <a class="new-ticket" href="/flights/<%= flight._id %>/tickets/new">New Ticket</a> 
  <ul>
    <% for (let i = 0; i < tickets.length; i++) { %>
      <li>- Seat: <%= tickets[i].seat %> &nbsp; Price: $<%= tickets[i].price %></li>
    <% } %>
  </ul>
</section>

<br><br><h2>Arrival: Dates & Times</h2>
<form 
id="arrival"
action="/flights/<%= flight._id %>/destinations"
method="POST"
>
<label>
  Destination: 
  <select name="airport">
    <option value="AUS">AUS</option>
    <option value="DFW">DFW</option>
    <option value="DEN">DEN</option>
    <option value="LAX">LAX</option>
    <option value="SAN">SAN</option>
  </select>
</label>
<label>
  Date:
  <input type="date" name="arrival">
</label>
<button type="submit">Add Destination</button>
</form>

<% if (flight.destinations.length) { %>
  <% flight.destinations.forEach(function(d) { %>
    <ul>
      <li>Destination: <%= d.airport %></li>
      <li>Arrival: <%= d.arrival %></li>
    </ul>
  <% }); %>
<% } else { %>
    <h5>No Details Available</h5>
<% } %>

<%- include('../partials/footer') %>